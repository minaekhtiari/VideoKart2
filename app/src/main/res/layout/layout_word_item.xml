<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/lbl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/img_studied"
            android:layout_toRightOf="@+id/img_studied"
            android:gravity="center"
            android:text="word"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/lbl_proun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lbl_title"
            android:layout_alignTop="@+id/lbl_title"
            android:layout_toLeftOf="@+id/lbl_clip_count"
            android:layout_toRightOf="@+id/lbl_title"
            android:gravity="left"
            android:singleLine="true"
            android:text="word"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#555"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/lbl_synonym"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lbl_title"
            android:layout_marginTop="3dp"
            android:gravity="left"
            android:lines="2"
            android:maxLines="2"
            android:text="a single distinct meaningful element of speech or writing a single distinct meaningful element of speech or writing"
            android:textColor="#666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lbl_clip_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lbl_synonym"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1 clip"
            android:textColor="#888"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/img_studied"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/lbl_title"
            android:tint="@color/md_green_600"
            android:visibility="gone"
            app:srcCompat="@mipmap/ic_done_black_24dp" />


    </RelativeLayout>


</RelativeLayout>