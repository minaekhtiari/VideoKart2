<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="70dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lesson_layout"
            >



            <TextView
                android:text="LESSON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/lbl_title"
                android:layout_centerVertical="true"

                android:layout_marginLeft="12dp"
                 />

            <RelativeLayout
                android:layout_height="18dp"
                android:id="@+id/layout_progress"
                android:layout_width="100dp"
                android:layout_marginRight="24dp"
                android:layout_marginEnd="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/roundCornerProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:rcProgress="15"
                    app:rcMax="25"
                    app:rcRadius="2dp"
                    app:rcBackgroundPadding="0dp"
                    app:rcReverse="false"
                    app:rcProgressColor="@color/md_green_600"
                    app:rcBackgroundColor="#bababa"/>

                <TextView
                    android:text="8/25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl_progress_state"
                    android:textColor="@color/white"

                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_lock_black_36dp"
                android:id="@+id/img_lock"
                android:tint="#236B99"
                android:visibility="gone"
                android:layout_marginRight="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

</LinearLayout>