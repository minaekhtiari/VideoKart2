<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_grey"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <TextView
        android:id="@+id/lbl_title"
        fontPath="fonts/iran_sans.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/layout_feedback"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/layout_feedback"
        android:gravity="right"
        android:padding="10dp"
        android:text="خیلی خوشحالیم که دوست داری با ما تماس بگیری. کافیه نقطه نظرات خودت رو به وسیله فرم زیر برای ما ارسال کنی. اگر هم با ایمیل راحت تری، با info@hillavas.com در ارتباط باش. "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_label_medium" />

    <TextView
        android:id="@+id/lbl_title2"
        fontPath="fonts/iran_sans.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/layout_feedback"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/layout_feedback"
        android:gravity="right"
        android:padding="10dp"
        android:text="برای کارهای خیلی ضروری می تونی با شماره تلفن 96998998 داخلی 310 تماس بگیری."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_label_medium" />


    <LinearLayout
        android:id="@+id/layout_feedback_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:orientation="vertical">


        <TextView

            android:id="@+id/lbl_message"
            fontPath="fonts/iran_sans.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/message"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/labelColor"

            android:textSize="@dimen/widget_label" />

        <EditText
            android:id="@+id/txt_feedback"
            fontPath="fonts/iran_sans.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLength="300"
            android:paddingBottom="@dimen/margin_5"
            android:paddingTop="@dimen/margin_16"
            android:textColor="@color/black"

            android:textSize="@dimen/edit_text_size_normal" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_feedback_user_text"
        android:gravity="left|top"
        android:orientation="horizontal"
        android:padding="10dp">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/send_button"
            fontPath="fonts/iran_sans.ttf"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/action_button_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_24"
            android:text="ارسال"
            android:textColor="#fff"

            android:textSize="@dimen/action_button_1"
            android:theme="@style/AppTheme" />
    </LinearLayout>


</LinearLayout>