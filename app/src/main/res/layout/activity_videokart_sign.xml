<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@drawable/intro_bg">


    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"

            android:src="@drawable/logo" />
    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/layout_header"
        android:id="@+id/layout_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">


        <EditText
            android:id="@+id/txt_phone"
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:background="@drawable/input_number"
            android:hint="شماره همراه"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/md_grey_850"
            android:textColorHint="@color/md_grey_600"
            android:textSize="15sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_sign_up"
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_sign"
            android:text="عضویت"
            android:textSize="15sp"
            android:textColor="@color/white" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_header"

        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="کد ۴ رقمی دریافت شده را وارد کنید"
            android:textColor="@color/black" />

        <com.raycoarana.codeinputview.CodeInputView
            android:id="@+id/txt_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:code_text_color="@color/black"
            app:error_color="@color/md_red_500"
            app:input_type="numeric"
            app:length_of_code="4"
            app:underline_color="@color/md_grey_500"
            app:underline_selected_color="@color/md_light_blue_500" />

        <com.hillavas.filmvazhe.screen.control.TimerView
            android:id="@+id/lbl_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/txt_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="00:59"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/btn_send_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="کد را دریافت نکرده ام! ارسال مجدد"
            android:textColor="@color/md_light_blue_500" />

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="بازگشت"
            android:textColor="@color/md_light_blue_500" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
